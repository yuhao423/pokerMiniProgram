/* pages/yus.wxss */
page{
  height:100% ;
}
.room-top{
  padding-top: 26%;
  height: 70px;
  display: flex;
}
.room-top-avatar{
  width: 70px;
  height: 70px;
  margin-left: 20px;
}
.room-top-content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 10px;
  padding-right: 20px;
}
.room-top-content .nickname{
  font-size: 26px;
  font-weight: 600;
}
.room-top-content .welcome{
  font-size: 14px;
  color: rgb(187, 187, 187);
}
.room-top-content .room-top-main-center{
  height: 30px;
  width: 80px;
  font-size: 12px;
  text-align: center;
  border-radius: 20px;
  color: rgb(74, 107, 223);
  border: 1px solid rgb(74, 107, 223);
  line-height: 30px;
}
button[plain]{ border:0 }
/* room-point */
.room-point{
  height: 180px;
  margin: 22px;
  background-color:rgb(76, 108, 221);
  border-radius: 20px;
  /* display: flex;
  flex-direction: column;
  align-items: center; */
}
.room-point .my-point{
  width: 100%;
  height: 140px;
  display: flex;
}
.room-point .my-point .my-point-number{
  width: 70%;
}
.room-point .my-point .my-point-reflash{
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my-point-reflash .reflash-view{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: rgb(95,124,222);
  display: flex;
  align-items: center;
  justify-content: center;
}
.my-point-reflash .reflash-view .reflash-img{
  height: 20px;
  width: 20px;
}
.room-point .point-buttom{
  width: 100%;
  height: 40px;
  background-color:rgba(220, 228, 255, 0.11);
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
  display: flex;
  color: #fff;
  line-height: 40px;
  justify-content: space-between;
  font-size: 12px;
}