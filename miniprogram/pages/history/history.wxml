<view>

  <image class="bg" src="../../common/images/111.png" mode="aspectFill"></image>


<view class="history-top">
<view class="one">
  <view class="avatar">
      <button class="historyButton" open-type="chooseAvatar" bindchooseavatar="onChooseAvatar" plain="true" >
      <image class="historyAvatar" src="{{a}}" ></image>
      </button> 
  </view>
  <view class="nickname">
    <text class="nickname-content">yuyuy</text>
  </view>
</view>
<view  class="two">
<view class="two-gold" bindtap="getGold">
  <view style="font-size: 21px;font-weight: 500;">0</view>
  <view style="font-size: 14px;color:#ccc;">
    <view style="width: 100%;position: relative;">金币
    <icon class="iconfont icon-wenhao" style="position: absolute;left: 32px;top: -6px;"/>
    </view>
  </view>
</view>
<view class="two-history" bindtap="getHistoryRecord">
  <view style="font-size: 21px;font-weight: 500;">0</view>
  <view style="font-size: 14px;color:#ccc;">
    <view style="width: 100%;position: relative;">历史记录
    <mp-icon style="position:absolute;left: 60px;top: -0.5px;" icon="arrow" color="#ccc" size="{{11}}"></mp-icon>
    </view>
  </view>
</view>

</view>
</view>

<view class="history-content">
<van-cell-group inset style="width: 90%;">
    <van-cell custom-class="round-top" size="large" title="头像" center title-style="font-size:16px;font-weight:600">
      <van-icon slot="icon" size="20px" name="search" class="custom-icon" />
      <view style="display: flex;justify-content: flex-end;">
        <button style="border: 1px solid #fff;width: 60px;height: 45px;margin-right: -5%;display: flex;align-items: center;justify-content: center;" plain open-type="chooseAvatar" bindchooseavatar="setHead">
          <image style="width: 30px;height: 30px;  border-radius: 50%;box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);" src="{{userAvatar}}" mode="aspectFill"></image>
        </button>
        <van-icon name="arrow" />
      </view>
    </van-cell>
    <van-cell size="large"  custom-class="round-bottom"  title="昵称" center title-style="font-size:16px;font-weight:600">
         <van-icon slot="icon" size="20px" name="search" class="custom-icon" />
         <!-- 通过 class-prefix 指定类名为 my-icon -->
    <!-- <van-icon class-prefix="icon-icon-geren" name="extra" /> -->
      <view style="display: flex;justify-content: flex-end;">
        <input style="color: rgb(0, 0, 0);padding-right: 5%;height: 40px;" class="input-style" placeholder="请输入昵称" type="nickname" value="{{userName}}" bindblur="setName" />
        <van-icon name="arrow" />
      </view>
    </van-cell>

  </van-cell-group>

  
</view>

<view style="margin-top: 20px;" class="history-end">
  <van-cell-group inset >
    <van-cell size="large"  custom-class="round-bottom update-record"  title="更新记录" center title-style="font-size:16px;font-weight:600">
         <van-icon slot="icon" size="20px" name="search" class="custom-icon" />
      <view style="display: flex;justify-content: flex-end;height: 40px;">
        <van-icon name="arrow" />
      </view>
    </van-cell>
    <van-cell size="large"  custom-class="round-bottom about-us"  title="关于我们" center title-style="font-size:16px;font-weight:600">
         <van-icon slot="icon" size="20px" name="search" class="custom-icon" />
      <view style="display: flex;justify-content: flex-end;height: 40px;">
        <van-icon name="arrow" />
      </view>
    </van-cell>
    <van-cell size="large"  custom-class="round-bottom Disclaimers"  title="免责声明" center title-style="font-size:16px;font-weight:600">
         <van-icon slot="icon" size="20px" name="search" class="custom-icon" />
      <view style="display: flex;justify-content: flex-end;height: 40px;">
        <van-icon name="arrow" />
      </view>
    </van-cell>
    <van-cell size="large"  custom-class="round-bottom black-mode"  title="暗黑模式" center title-style="font-size:16px;font-weight:600">
         <van-icon slot="icon" size="20px" name="search" class="custom-icon" />
      <view style="display: flex;justify-content: flex-end;height: 40px;">
        <van-icon name="arrow" />
      </view>
    </van-cell>
  </van-cell-group>
 
</view>

<view class="weui-footer weui-footer_fixed-bottom">

<view class="weui-footer__links">

  <navigator url="" class="weui-footer__link">Yuuu</navigator>

</view>

<view class="weui-footer__text">Copyright © 2018-2023 yuuu.io</view>

<view class="weui-footer__text">备案号：粤B2-20090059</view>
</view>

