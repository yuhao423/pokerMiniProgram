  <mp-half-screen-dialog
  bindbuttontap="buttontap"
  show="{{showGold}}"
  maskClosable="{{true}}" 
  extClass="{{showOverlay ? 'goldClass overlay':'goldClass'}}"
  >
  
  <view slot="title">金币   
    <text style="position: absolute;right: 0px;top: 21px;color:rgb(64, 108, 232);" bindtap="getGoldDetail">明细</text>
  </view>
  <view slot="desc">
    <view style="height: 100rpx;text-align: center;padding-right:30px;margin-top: 20px;font-size: 45px;line-height: 100rpx;position: relative;font-weight: 600;">
    0
    <image src="../../common/images/coin.png" style="height: 25px;width: 25px;position: absolute;left: 50%;top: 22px;" alt=""/>
    </view>
    <view style="height: 50px;font-size: 16px;line-height: 50px;margin-top: 20px;">获取：初始100个，每观看一个广告获得一个</view>
    <view >
      <view style="font-size: 16px;">消耗：1.每次创建或加入房间消耗一枚金币</view>
    </view>
