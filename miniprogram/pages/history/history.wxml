    <view style="text-align: center;line-height: 50px;"><text style="color: #ccc;">本小程序承诺不会主动弹出广告</text></view>
    <button style="background-color: rgb(64, 108, 232);color: #fff;margin-bottom: 20px;margin-top: 10px ;border:none;height: 50px;line-height: 50px;">看广告</button>
    <button style="background-color: rgb(242, 247, 255);color: black;border:none;height: 50px;line-height: 50px;font-weight: 600;">关闭</button>
  </view>
</mp-half-screen-dialog>
<mp-half-screen-dialog
bindbuttontap="buttontapGoldDetail"
bindclose="buttontapGoldDetail"
  show="{{showGoldDetail }}"
  maskClosable="{{true}}" 
  extClass="goldClass detail"
  mask="{{true}}"
>
<view slot="title">金币明细</view>
<view slot="desc">
<scroll-view style="height: 330px;" 	scroll-y 	show-scrollbar="{{false}}" 	enable-flex> 
  
  <view style="height: 60px;width: 98%;box-shadow: 0 2px 10px rgba(160, 159, 159, 0.5);display: flex;justify-content: space-between;align-items: center;border-radius: 10px;margin: auto;margin-bottom: 10px;margin-top: 10px;">
  <view>
  <text style="font-size: 16px;padding-left: 10px;font-weight: 600;">系统赠送\n</text>
  <text style="padding-left: 10px;color: #ccc;">2023/233/23</text>
  </view>
  <view style="font-size: 26px;font-weight: 600;padding-right: 10px;color: rgb(64, 108, 232);">+10</view>
  </view>

  
</scroll-view>

</view>
</mp-half-screen-dialog>

<!-- history-record -->
<mp-half-screen-dialog
bindbuttontap="buttontap"
  show="{{showHistoryRecord}}"
  maskClosable="{{true}}" 
>
  <view slot="title">历史记录   
    <text style="position: absolute;right: 0px;top: 21px;color:rgb(64, 108, 232);" bindtap="getGoldDetail">删除</text>
  </view>
  <view slot="desc" style="height: 650rpx;">x</view>
</mp-half-screen-dialog>
</view>